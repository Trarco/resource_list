<div class="row gx-2">
    {{#showtagfrontendfilter}}
    <div class="col">
        <div class="mb-2 dropdown resource-tag-dropdown position-relative" data-uniqid="{{uniqid}}">
            <label class="form-label d-block">{{#str}}filterbytag, block_resource_list{{/str}}</label>
            <button class="btn btn-outline-secondary w-100 text-start d-flex justify-content-between align-items-center"
                type="button" id="resourceListDropdownToggleBtn-{{uniqid}}"
                data-showallresources="{{#str}}showallresources, block_resource_list{{/str}}"
                data-tagsselected="{{#str}}tagsselected, block_resource_list{{/str}}">
                <span class="selected-tags-text">{{#str}}showallresources, block_resource_list{{/str}}</span>
                <i class="icon fa fa-chevron-down fa-fw" aria-hidden="true"></i>
            </button>
            <ul class="dropdown-menu w-100 mt-1" id="resourceListTagfilterinput-{{uniqid}}"
                style="display: none; max-height: 250px; overflow-y: auto;">
                {{#availabletags}}
                <li>
                    <label class="dropdown-item d-flex align-items-center">
                        <input type="checkbox" class="form-check-input me-2 tag-filter-checkbox" value="{{rawname}}">
                        {{rawname}}
                    </label>
                </li>
                {{/availabletags}}
            </ul>
        </div>
    </div>
    {{/showtagfrontendfilter}}
    {{#showtypefrontendfilter}}
    <div class="col">
        <div class="mb-2 dropdown resource-type-dropdown position-relative" data-uniqid="{{uniqid}}">
            <label class="form-label d-block">{{#str}}filterbytype, block_resource_list{{/str}}</label>
            <button class="btn btn-outline-secondary w-100 text-start d-flex justify-content-between align-items-center"
                type="button" id="resourceListTypeToggleBtn-{{uniqid}}"
                data-showalltypes="{{#str}}showalltypes, block_resource_list{{/str}}"
                data-typesselected="{{#str}}typesselected, block_resource_list{{/str}}">
                <span class="selected-types-text">{{#str}}showalltypes, block_resource_list{{/str}}</span>
                <i class="icon fa fa-chevron-down fa-fw" aria-hidden="true"></i>
            </button>
            <ul class="dropdown-menu w-100 mt-1" id="resourceListTypefilterinput-{{uniqid}}"
                style="display: none; max-height: 250px; overflow-y: auto;">
                {{#availabletypes}}
                <li>
                    <label class="dropdown-item d-flex align-items-center">
                        <input type="checkbox" class="form-check-input me-2 type-filter-checkbox" value="{{modname}}">
                        {{displayname}}
                    </label>
                </li>
                {{/availabletypes}}
            </ul>
        </div>
    </div>
    {{/showtypefrontendfilter}}
</div>